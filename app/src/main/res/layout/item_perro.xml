<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPerro"
        android:layout_width="150dp"
        android:layout_height="150dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="@font/interbold"
        android:textAppearance="@color/btnFill"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivPerro"
        app:layout_constraintTop_toTopOf="@+id/ivPerro"
        tools:text="Husky" />

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/interregular"
        android:textSize="13dp"
        app:layout_constraintStart_toEndOf="@+id/ivPerro"
        app:layout_constraintTop_toBottomOf="@+id/tvRaza"
        tools:text="Color: Negro" />

    <TextView
        android:id="@+id/tvPureza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textSize="13dp"
        android:fontFamily="@font/interregular"
        app:layout_constraintStart_toStartOf="@+id/tvColor"
        app:layout_constraintTop_toBottomOf="@+id/tvColor"
        tools:text="Raza: pura" />

    <TextView
        android:id="@+id/tvCiudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="13dp"
        android:fontFamily="@font/interregular"
        app:layout_constraintStart_toStartOf="@+id/tvPureza"
        app:layout_constraintTop_toBottomOf="@+id/tvPureza"
        tools:text="Ciudad: Sevilla" />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/interbold"
        android:textSize="25sp"
        android:textColor="@color/verde"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="400$" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>